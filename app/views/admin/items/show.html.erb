<div class="admin_items_show_container">
  <h2>商品詳細</h2>
  <div class="admin_items_show_display">
    <div>
      <%= attachment_image_tag @item,:image,size:"160x120" %>
    </div>
    <div>
      <table>
        <tr>
          <td>商品名</td>
          <td><%= @item.name %></td>
        </tr>
        <tr>
          <td>商品説明</td>
          <td><%= @item.introduction %></td>
        </tr>
        <tr>
          <td>ジャンル</td>
          <td><%= @item.genre.name %></td>
        </tr>
        <tr>
          <td>税込価格<br />(税抜価格)</td>
          <td><%= (@item.price*1.1).to_i.to_s(:delimited) %> (<%= @item.price.to_s(:delimited) %>)円</td>
        </tr>
        <tr>
          <td>販売ステータス</td>
          <td>
            <% if @item.is_active %>
              <p class="is_active_true">販売中</p>
            <% else %>
              <p class="is_active_true is_active_bold">販売停止中</p>
            <% end %>
          </td>
        </tr>
      </table>
    </div>
  </div>
  <div class="admin_items_show_btn_div">
    <%= link_to "編集する",edit_admin_item_path(@item),class:"btn btn_green admin_items_show_btn" %>
  </div>
</div>