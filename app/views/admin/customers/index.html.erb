<div class="admin_items_index_container admin_customers_index_container">
  <h2>会員一覧</h2>

  <table>
    <tr>
      <th>会員ID</th>
      <th>氏名</th>
      <th>メールアドレス</th>
      <th>ステータス</th>
    </tr>
    <% @customers.each do |customer| %>
      <tr>
        <td>
          <%= customer.id %>
        </td>
        <td>
          <%= link_to customer.last_name+customer.first_name ,admin_customer_path(customer) %>
        </td>
        <td>
          <%= customer.email %>
        </td>
        <td>
          <% if customer.is_deleted == false %>
            <p class="is_active_true">有効</p>
          <% else %>
            <p class="is_active_false">退会</p>
          <% end %>
        </td>
      </tr>
    <% end %>
  </table>
  <%= paginate @customers %>
</div>
