<div class="admin_orders_show_container">
  <h2>注文履歴詳細</h2>
  <table>
    <tr>
      <th>購入者</th>
      <td><%= link_to @order.customer.last_name + " " + @order.customer.first_name,admin_customer_path(@order.customer_id) %></td>
    </tr>
    <tr>
      <th>注文日</th>
      <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
    </tr>
    <tr>
      <th>配送先</th>
      <td>
        <%= '〒' + @order.postal_code + " " + @order.address %><br />
        <%= @order.name %>
      </td>
    </tr>
    <tr>
      <th>支払方法</th>
      <td><%= @order.payment_method_i18n %></td>
    </tr>
    <tr>
      <th>注文ステータス</th>
      <td>
        <%= form_with model: @order ,url:admin_order_path(@order) ,local:true do |f| %>
          <%= f.select :status,
                        Order.statuses.keys.map{|s| [I18n.t("enums.order.status.#{s}"), s] },
                        selected: @order.status %>
          <%= f.submit "更新",class:"btn btn_green order_show_btn"  %>
        <% end %>
      </td>
    </tr>
  </table>

  <div class="admin_orders_show_details_container">
    <div class="admin_orders_show_detail">
      <table>
        <tr>
          <th>商品名</th>
          <th>単価（税込）</th>
          <th>数量</th>
          <th>小計</th>
          <th>製作ステータス</th>
        </tr>

        <% @order.order_details.each do |order_detail| %>
          <tr>
            <td><%= order_detail.item.name %></td>
            <td><%= order_detail.price.to_s(:delimited) %></td>
            <td><%= order_detail.amount %></td>
            <td><%= (order_detail.price * order_detail.amount).to_s(:delimited) %></td>
            <td>
              <%= form_with model: [@order],url:admin_order_detail_path(order_detail) ,local:true do |f| %>
                <%= f.select :making_status,
                              OrderDetail.making_statuses.keys.map{|s| [I18n.t("enums.order_detail.making_status.#{s}"), s] },
                              selected: order_detail.making_status %>
                <%= f.submit "更新",class:"btn btn_green order_show_btn" %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </table>
    </div>

    <div class="admin_orders_show_price">
      <table>
        <tr>
          <th>商品合計</th>
          <td><%= (@order.total_payment - @order.shipping_cost).to_s(:delimited) %>円</td>
        </tr>
        <tr>
          <th>送料</th>
          <td><%= @order.shipping_cost.to_s(:delimited) %>円</td>
        </tr>
        <tr>
          <th>請求金額合計</th>
          <td><%= @order.total_payment.to_s(:delimited) %>円</td>
        </tr>
      </table>
    </div>
  </div>
</div>