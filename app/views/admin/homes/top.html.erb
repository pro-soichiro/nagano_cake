<div class="admin_items_index_container admin_customers_index_container">
  <h2>注文履歴一覧</h2>

  <table>
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
    <% @orders.each do |order| %>
      <tr>
        <td>
          <%= link_to order.created_at.strftime('%Y/%m/%d %H:%M:%S'),admin_order_path(order) %>
        </td>
        <td>
          <%= order.customer.last_name + order.customer.first_name %>
        </td>
        <td>
          <% @total_amount = 0 %>
          <% order.order_details.each do |order_detail| %>
            <% @total_amount += order_detail.amount %>
          <% end %>
          <%= @total_amount %>
        </td>
        <td>
          <%= order.status_i18n %>
        </td>
      </tr>
    <% end %>
  </table>
  <%= paginate @orders %>
</div>