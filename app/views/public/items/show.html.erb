<div>
  <table>
    <tr>
      <th>ジャンル検索</th>
    </tr>
    <% @genres.each do |genre| %>
      <tr>
        <td>
          <%= link_to genre.name,root_path %>
        </td>
      </tr>
    <% end %>
  </table>
</div>

<div>
  <div>
    <div>
      <%= form_with model:@cart_item,url:cart_items_path, local:true do |f| %>
        <%= attachment_image_tag @item,:image , format: 'jpeg', size: "280x200" %>
        <h3><%= @item.name %></h3>
        <%= f.hidden_field :item_id, value: @item.id %>
        <p><%= @item.introduction %></p>
        <p>¥<%= @item.price %></p>
        <%= f.select :amount,
              *[1..10 ],
              :prompt => "個数選択"
              %>

        <%= f.submit "カートに入れる" %>
      <% end %>
    </div>
  </div>
</div>