<div>
  <table>
    <tr>
      <th>ジャンル検索</th>
    </tr>
    <% @genres.each do |genre| %>
      <tr>
        <td>
          <%= link_to genre.name,root_path %>
        </td>
      </tr>
    <% end %>
  </table>
</div>

<div>
  <div>

    <h2>商品一覧<span>全<%= @items.count %>件</span></h2>
    <% @items.each do |item| %>
      <div>
        <%= link_to item_path(item),target: "_blank" do %>
          <%= attachment_image_tag item,:image, format: 'jpeg', size: "280x200" %>
          <%= item.name %>
        <% end %>
        <%= '¥' + item.price.to_s(:delimited) %>
      </div>
    <% end %>
  </div>
  <%= paginate @items %>
</div>