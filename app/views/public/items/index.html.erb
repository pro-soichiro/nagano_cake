<div class="items_index_container">
  <div class="items_index_genre_bar">
    <table>
      <tr>
        <th>ジャンル検索</th>
      </tr>
      <% @genres.each do |genre| %>
        <tr>
          <td>
            <%= link_to genre.name,genre_index_path(genre) %>
          </td>
        </tr>
      <% end %>
    </table>
  </div>

  <div class="items_index_items">
    <h1>商品一覧 <span>(全<%= @items.total_count %>件)</span></h1>
    <div class="items_index_items_container">
      <% @items.each do |item| %>
        <div class="items_index_item_container">
          <%= link_to item_path(item) do %>
            <%= attachment_image_tag item,:image, format: 'jpeg', size: "160x90" %><br />
            <%= item.name %>
          <% end %><br />
          <%= '¥' + item.price.to_s(:delimited) %>
        </div>
      <% end %>
    </div>
    <%= paginate @items %>
  </div>
</div>