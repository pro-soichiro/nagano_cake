<div>
  <table>
    <tr>
      <th>ジャンル検索</th>
    </tr>
    <% @genres.each do |genre| %>
      <tr>
        <td>
          <%= link_to genre.name,root_path %>
        </td>
      </tr>
    <% end %>
  </table>
</div>

<div>
  <div>

    <h2>商品一覧<span>全<%= @items.count %>件</span></h2>
    <% @items.each do |item| %>
      <div>
        <%= attachment_image_tag item,:image, format: 'jpeg', size: "280x200" %>
        <%= link_to item.name, item_path(item) %>
        <p>¥<%= item.price %></p>
      </div>
    <% end %>
  </div>
  <p>link_to "すべての商品を見る >",items_path</p>
</div>