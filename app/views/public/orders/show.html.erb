<div class="orders_show_container">
  <h2>注文履歴詳細</h2>
  <div class="order_container">
    <div class="orders_show_order_info">
      <h3>注文情報</h3>
      <table border="1">
        <tr>
          <th>注文日</th>
          <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
        </tr>
        <tr>
          <th>配送先</th>
          <td>
            <%= '〒' + @order.postal_code %><br />
            <%= @order.address %><br />
            <%= @order.name %><br />
          </td>
        </tr>
        <tr>
          <th>支払い方法</th>
          <td><%= @order.payment_method_i18n %></td>
        </tr>
        <tr>
          <th>ステータス</th>
          <td><%= @order.status_i18n %></td>
        </tr>
      </table>
    </div>

    <div class="orders_show_order_payment">
      <h3>請求情報</h3>
      <table border="1">
        <tr>
          <th>商品合計</th>
          <td><%= (@order.total_payment - @order.shipping_cost).to_s(:delimited) %></td>
        </tr>
        <tr>
          <th>配送料</th>
          <td><%= @order.shipping_cost.to_s(:delimited) %></td>
        </tr>
        <tr>
          <th>ご請求額</th>
          <td><%= @order.total_payment.to_s(:delimited) %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="order_detail_container">
    <h3>注文内容</h3>
    <table border="1">
      <tr>
        <th>商品</th>
        <th>単価（税込）</th>
        <th>個数</th>
        <th>小計</th>
      </tr>

      <% @order.order_details.each do |order_detail| %>
        <tr>
          <td><%= order_detail.item.name %></td>
          <td><%= order_detail.price.to_s(:delimited) %></td>
          <td><%= order_detail.amount.to_s(:delimited) %></td>
          <td><%= (order_detail.price * order_detail.amount).to_s(:delimited) %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>