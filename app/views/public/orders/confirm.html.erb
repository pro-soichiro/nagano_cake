<div class="orders_confirm_container">
  <%= form_with model:@order ,url:orders_path,local:true do |f| %>
    <h2>注文情報確認</h2>
    <div class="orders_confirm_item">
      <table class="orders_confirm_items_table">
        <theard>
          <tr>
            <th colspan="2" class="name_width">商品名</th>
            <th class="width">単価(税込)</th>
            <th class="width">数量</th>
            <th class="width">小計</th>
          </tr>
        </theard>
        <tbody>
          <% @sum = 0 %>
          <% @cart_items.each do |cart_item| %>
          <tr class="line">
            <td><%= attachment_image_tag cart_item.item ,:image , format: 'jpeg', size: "70x50" %></td>
            <td><%= cart_item.item.name %></td>
            <td class="line widht"><%= cart_item.item.with_tax_price.to_s(:delimited) %></td>
            <td class="line width"><%= cart_item.amount %></td>
            <td class="line width">
              <%= cart_item.subtotal.to_s(:delimited) %>
              <% @sum += cart_item.subtotal %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>

      <table class="orders_confirm_price_table">
        <tr>
          <th class="width">送料</th>
          <td class="line width"><%= @order.shipping_cost.to_s(:delimited) %></td>
        </tr>
        <tr>
          <th>商品合計</th>
          <td class="line">
            <!--商品合計-->
            <%= @sum.to_s(:delimited) %>
          </td>
        </tr>
        <tr>
          <th>請求金額</th>
          <% @total_payment = 0 %>
          <% @total_payment += (@sum + @order.shipping_cost) %>
          <td class="line"><%= @total_payment.to_s(:delimited) %></td>
          <%= f.hidden_field :total_payment , value: @total_payment %>
        </tr>
      </table>
    </div>
    <div class="orders_confirm_payment">
      <h3>支払方法</h3>
      <div>
        <%= @order.payment_method_i18n %>
        <%= f.hidden_field :payment_method, value: @order.payment_method %>
      </div>
    </div>
    <div class="orders_confirm_address">
      <h3>お届け先</h3>
      <div>
        <%= '〒' + @order.postal_code + ' ' + @order.address %><br />
        <%= @order.name %>
        <%= f.hidden_field :postal_code , value: @order.postal_code %>
        <%= f.hidden_field :address , value: @order.address %>
        <%= f.hidden_field :name , value: @order.name %>
      </div>
    </div>

    <%= f.submit '注文を確定する',class:"btn btn_green orders_confirm_item_btn"  %>
  <% end %>

</div>