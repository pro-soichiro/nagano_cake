<h2>ショッピングカート</h2>
<%= link_to "カートを空にする" %>
<table>
  <tr>
    <th>商品名</th>
    <th>単価(税込)</th>
    <th>数量</th>
    <th>小計</th>
    <th></th>
  </tr>
  <% @cart_items.each do |cart_item| %>
    <tr>
      <td>
        <%= cart_item.item.name %>
      </td>
      <td>
        <%= cart_item.item.price %>
      </td>
      <td>
        <%= cart_item.amount %>
      </td>
      <td>
        <%= cart_item.amount * cart_item.item.price %>
      </td>
      <td>
        <%= link_to "削除する",root_path %>
      </td>
    </tr>
  <% end %>
</table>