<h2>ショッピングカート</h2>
<%= link_to "カートを空にする", cart_items_destroy_all_path(@cart_items), method: :delete %>
<table>
  <thead>
    <th>商品名</th>
    <th>単価(税込)</th>
    <th>数量</th>
    <th>小計</th>
    <th></th>
  </thead>
  <tbody>

    <% @cart_items.each do |cart_item| %>
      <tr>
        <td>
          <%= cart_item.item.name %>
        </td>
        <td>
          <%= cart_item.item.with_tax_price %>
        </td>
        <td>
          <%= form_with model: cart_item ,url:cart_item_path(cart_item) ,local:true do |f| %>
            <%= f.select :amount,*[1..10 ],selected: cart_item.amount %>
            <%= f.submit "変更" %>
          <% end %>
        </td>
        <td>
          <%= cart_item.subtotal %>
          <% @sum += cart_item.subtotal %>
        </td>
        <td>
          <%= link_to "削除する",cart_item_path(cart_item),method: :delete %>
        </td>
      </tr>
  <% end %>
  </tbody>

  <%= link_to "買い物を続ける",items_path %>

  <tr>
    <th>合計金額</th>
    <td>
      <%= @sum %>
    </td>
  </tr>
  <% unless @cart_items.blank?  %>
    <%= link_to "情報入力へ進む",new_order_path  %>
  <% else %>
  <% end %>
</table>